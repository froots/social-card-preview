{
  "name": "social-card-preview",
  "version": "0.1.0",
  "description": "Preview social media link cards",
  "main": "app.js",
  "author": "Jim Newbery <james@tinnedfruit.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run prod && npm run package",
    "clean": "rimraf ./assets/**/*",
    "dev": "npm run webpack:dev",
    "lint:js": "eslint ./app/**/*.js ./tests/**/*.js ./config/**/*.js",
    "package": "zip -r dist/social-card-preview.zip ./assets",
    "preprod": "npm run clean",
    "prod": "npm run webpack:prod",
    "start": "static-server -p 8080 -d assets/",
    "pretest": "npm run webpack:prod",
    "test": "npm-run-all -l lint:js test:unit test:system",
    "test:unit": "tape -r babel-register app/**/*.test.js | faucet",
    "test:system": "nightwatch",
    "webpack:dev": "webpack-dev-server --config ./config/webpack.config.dev.babel.js --env=development",
    "webpack:prod": "webpack --config ./config/webpack.config.prod.babel.js"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "chromedriver": "^2.28.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "faucet": "^0.0.1",
    "html-webpack-plugin": "^2.28.0",
    "nightwatch": "^0.9.14",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "static-server": "^2.0.4",
    "style-loader": "^0.16.1",
    "tape": "^4.6.3",
    "testdouble": "^2.1.1",
    "webpack": "^2.3.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "choo": "^5.0.4"
  }
}
